<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css"> <!-- We will create this file next -->
</head>
<body>
    <div class="container">
        <h1>Payroll Management System</h1>

        <div class="section">
            <h2>Add New Employee</h2>
            <form id="add-employee-form">
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="employeeId">Employee ID</label>
                    <input type="text" id="employeeId" name="employeeId" required>
                </div>
                <button type="submit">Add Employee</button>
            </form>
        </div>

        <div class="section">
            <h2>Calculate Payroll</h2>
            <form id="calculate-payroll-form">
                <div class="form-group">
                    <label for="employee-select">Select Employee</label>
                    <select id="employee-select" name="employeeId" required>
                        <option value="">Loading employees...</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="daysWorked">Days Worked</label>
                    <input type="number" id="daysWorked" name="daysWorked" required min="0" max="31">
                </div>
                 <div class="form-group">
                    <label for="advanceDeduction">Advance Taken (₹)</label>
                    <input type="number" id="advanceDeduction" name="advanceDeduction" value="0">
                </div>
                <div class="form-group">
                    <label for="assetsDeduction">Assets Deduction (₹)</label>
                    <input type="number" id="assetsDeduction" name="assetsDeduction" value="0">
                </div>
                 <div class="form-group">
                    <label for="pfPercentage">PF Contribution (%)</label>
                    <input type="number" id="pfPercentage" name="pfPercentage" value="10" required>
                </div>
                 <div class="form-group">
                    <label for="esiPercentage">ESI Contribution (%)</label>
                    <input type="number" id="esiPercentage" name="esiPercentage" value="1.5" required>
                </div>
                <div class="form-group">
                    <label for="month">Select Month</label>
                    <select id="month" name="month" required>
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                </div>
                <input type="hidden" id="year" name="year" value="">
                <button type="submit">Calculate & Save</button>
            </form>
        </div>

        <!-- Results will be displayed here -->
        <div id="payroll-results-container" class="section results-section"></div>

        <!-- Payroll history will be displayed here -->
        <div class="section">
            <h3>Payroll History</h3>
            <div id="payroll-history-container">
                <!-- Payroll history will be displayed here -->
            </div>
        </div>

        <div class="section">
            <a href="/assets" class="btn btn-primary">Asset Inventory</a>
        </div>
    </div>

    <script src="/js/main.js"></script> <!-- We will create this file next -->
</body>
</html>
